{
  "name": "post-news",
  "version": "1.0.0",
  "description": "Um clone do TabNews com o objetivo de entender, revisar e me aprofundar em conceitos de programação.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "services:up": "docker compose -f ./infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./infra/compose.yaml stop",
    "services:down": "docker compose -f ./infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "test": "npm run services:up && concurrently -n next,jest --hide next --k -s command-jest \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "commit": "cz",
    "prepare": "husky"
  },
  "author": "Vicente Junior",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "20.4.1",
    "commitizen": "4.3.0",
    "commitlint": "19.4.0",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "prettier": "3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
